<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape>
            <corners android:radius="0dp" />

            <gradient
                android:angle="90"
                android:endColor="#0000CD"
                android:startColor="#191970"
                android:type="linear" />
        </shape>
    </item>
    <item
        android:bottom="1dp"
        android:right="1dp">
        <shape>
            <corners android:radius="0dp" />

            <gradient
                android:angle="90"
                android:endColor="#7F0000FF"
                android:startColor="#7F0000FF"
                android:type="linear" />
        </shape>
    </item>

</layer-list>