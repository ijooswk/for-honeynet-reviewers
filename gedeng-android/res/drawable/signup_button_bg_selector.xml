<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <item>
                <shape>
                    <corners android:radius="0dp" />

                    <gradient android:angle="90" android:endColor="#D3D3D3" android:startColor="#C0C0C0" android:type="linear" />
                </shape>
                
            </item>
            <item android:bottom="1dp" android:right="1dp">
                <shape>
                    <corners android:radius="0dp" />
                    <gradient android:angle="90" android:endColor="#7F666666" android:startColor="#7F666666" android:type="linear" />
                </shape>    
            </item>
        </layer-list>  
    </item>
    <item android:state_focused="true">
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <item>
                <shape>
                    <corners android:radius="0dp" />
                    <gradient android:angle="90" android:endColor="#D3D3D3" android:startColor="#C0C0C0" android:type="linear" />
                </shape>    
            </item>
            <item android:bottom="1dp" android:right="1dp">
                <shape>
                    <corners android:radius="0dp" />
                    <gradient android:angle="90" android:endColor="#7F666666" android:startColor="#7F666666" android:type="linear" />
                </shape>
            </item>
        </layer-list>
       
    </item>
    <item>
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <item>
                <shape>
                    <corners android:radius="0dp" />
                    <gradient android:angle="90" android:endColor="#D3D3D3" android:startColor="#C0C0C0" android:type="linear" />
                </shape>
            </item>
            <item android:bottom="1dp" android:right="1dp">
                <shape>
                    <corners android:radius="0dp" />
                    <gradient android:angle="90" android:endColor="#666666" android:startColor="#666666" android:type="linear" />
                </shape>
            </item>
        </layer-list>       
    </item>

</selector>